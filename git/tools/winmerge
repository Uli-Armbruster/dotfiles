#!/bin/sh
#
# export GIT_DIFFMERGE_VERBOSE=1 to enable logging

script_path="${0%/*}"
. "$script_path/diff-and-merge-support"

tool="$(tool_path "~/.dotfiles/tools/WinMerge/WinMergeU.exe")" || exit $?

op="${1?Need operation (diff or merge) as the first argument}"
shift

case "$op" in
  diff)
    diff_args "$1" "$2" || exit $?

    exec "$tool" /e \
                 /u \
                 /dl "$left_title" \
                 /dr "$right_title" \
                 "$left" \
                 "$right" \
                 > /dev/null 2>&1
    ;;

  merge)
    merge_args "$1" "$2" "$3" "$4" || exit $?

    exec "$tool" /e \
                 /u \
                 /wl \
                 /dl "Ours: $local_desc" \
                 /dr "Theirs: $remote_desc" \
                 "$local" \
                 "$remote" \
                 "$result" \
                 > /dev/null 2>&1
    ;;

  *)
    printf 'Unknown operation: %s\n' "$op" >&2
    exit 1
    ;;
esac
